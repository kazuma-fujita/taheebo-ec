/* ------------------------------------- */
/*	  05.footer	*/
/* ------------------------------------- */
/*  fotoer	*/
/*--------------------------------- */
#footer_wrap {
  padding: 20px 0;
  border-top: 1px solid #ddd;
  background-color: #FFFFFF;
}
#footer_wrap #guide_list {
  text-align: center;
}
