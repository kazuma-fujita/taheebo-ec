/* ------------------------------------- */
/*	  01.common	*/
/* ------------------------------------- */
body {
  font-size: 12px;
  background-color: #fafafa;
  background-image: url('/user_data/packages/bootcube/img/taheebo/taheebo_bg.png');
  background-repeat: repeat;
  background-position: center top;
  background-attachment: fixed;
}

.frame_outer {
  text-align: left;
}

a {
  color: #08c;
  -webkit-transition: all 0.2s;
  -moz-transition: all 0.2s;
  -ms-transition: all 0.2s;
  -o-transition: all 0.2s;
  transition: all 0.2s;
}
a:hover {
  color: #08c;
}

/* ------------------------------------- */
/*	  02.top_bar	*/
/* ------------------------------------- */
#top_bar {
  padding: 3px 0;
  border-bottom: 1px solid #eee;
  /* background-color: #737373; */
  background-color: #000000;
}
#top_bar ul {
  margin-bottom: 0;
}
#top_bar ul li a {
  color: #fff;
}
#top_bar ul li a:hover {
  text-decoration: underline;
}

/* ------------------------------------- */
/*	  03.header	*/
/* ------------------------------------- */
/*  logo_area	*/
/*--------------------------------- */
@media (max-width: 768px) {
  #logo_area {
    text-align: center;
    margin-bottom: 20px;
  }
}

/*  header_wrap  */
/*--------------------------------- */
#header_wrap {
  background-color: #fff;
}

/*  header	*/
/*--------------------------------- */
#header {
  width: 100%;
  padding: 20px 0;
  padding-top: 30px;
}
#header #logo_area h1 {
  margin: 0;
  color: #333;
  line-height: 24px;
}
#header #logo_area h1 a {
  font-weight: bold;
  color: #555;
  font-size: 28px;
}
#header #logo_area h1 a:hover {
  text-decoration: none;
  color: #1c83e1;
}
#header #logo_area h1 a img {
  width: 100%;
}
#header #logo_area p {
  display: inline-block;
  margin-left: 20px;
  margin-bottom: 0;
}

/*  headerInternalColumn  */
/*--------------------------------- */
#headerInternalColumn > div:last-child {
  padding-right: 0;
}
@media (max-width: 768px) {
  #headerInternalColumn > div:last-child {
    padding-right: 15px;
  }
}

/*  header_navi  */
/*--------------------------------- */
#header_navi {
  margin-top: 20px;
}
@media (max-width: 768px) {
  #header_navi {
    margin-top: 0;
    margin-bottom: 20px;
    text-align: center;
  }
}
#header_navi .btn-default {
  color: #1c83e1;
  background-color: #FFF;
  border-color: #1c83e1;
}
#header_navi .btn-default:hover {
  color: #fff;
  background-color: #48A0F0;
}

